<fieldset id="edit_change_fieldset">
	<legend>Edit database change for <%=h @activity %></legend>
	<a href="#" class="form_close" style="display: none;"><img src="/images/forms/x.gif" /></a>
	<% form_for(@change, :url => app_activity_change_path(@activity.app, @activity, @change)) do |f| %>
    <%= render :partial => "changes/form", :locals => {:f => f} %>
    <p>
      <%= f.submit 'Save & Execute', :name => 'edit_change_execute_submit', :id => 'edit_change_execute_submit' %>
      <%= f.submit 'Only Save', :id => 'edit_change_save_submit', :name => 'change_save_submit' %>
    </p>
	<% end %>
</fieldset>